{
    "name": "TabsPlus",
    "version": "0.1",
    "description": "Additional features to enhance chrome tabs and windows",
    "manifest_version": 3,

    "action": {
        "default_popup": "index.html",
        "default_title": "TabsPlus"
    },
    "permissions": [
        "tabs",
        "tabGroups",
        "bookmarks"
    ],
    "background": {
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./js/utils.js"
            ],
            "type": "module"
        }
    ]
}