{
    "name": "TabsPlus",
    "version": "0.1",
    "description": "Additional features to enhance chrome tabs and windows",
    "manifest_version": 3,
    "authors": [
        "Sriram Yadavalli",
        "Nima Emamian",
        "Ruben Rivera",
        "Nicolas Hernandez",
        "Alexander Hong",
        "Matthew Reed"
    ],
    "icons": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
    "action": {
        "default_popup": "index.html",
        "default_title": "TabsPlus"
    },
    "permissions": [
        "tabs",
        "tabGroups",
        "bookmarks",
        "scripting",
        "storage",
        "activeTab"
    ],
    "background": {
        "type": "module",
        "service_worker" : "./js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./js/utils.js",
                "./js/content-script.js"
            ],
            "type": "module"
        }
    ]
}